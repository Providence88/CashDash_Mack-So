<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Text Style for Headings -->
    <style name="HeadingText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <!-- Style for the budget panel -->
    <style name="PanelStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Custom style for DatePickerDialog -->
    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButton</item>
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Custom button style for DatePicker -->
    <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">?android:attr/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginEnd">55dp</item> <!-- Add margin to the right -->
        <item name="android:layout_marginStart">16dp</item> <!-- Add margin to the left -->
        <item name="android:padding">12dp</item> <!-- Add padding for spacing inside buttons -->
    </style>
</resources>



