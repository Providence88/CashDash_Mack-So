<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/billTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Title"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_below="@id/billTitleTextView"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/billDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/billTitleTextView"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@drawable/edittext_custom_border" />

    <!-- Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:layout_below="@id/billDescriptionTextView"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/billAmountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/billDescriptionTextView"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@drawable/edittext_custom_border" />

    <!-- Date Received -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Received:"
        android:layout_below="@id/billAmountTextView"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/billDateReceivedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/billAmountTextView"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@drawable/edittext_custom_border" />

    <!-- Date Due -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Due:"
        android:layout_below="@id/billDateReceivedTextView"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/billDateDueTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/billDateReceivedTextView"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@drawable/edittext_custom_border" />

    <!-- Category -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:layout_below="@id/billDateDueTextView"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/billCategoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/billDateDueTextView"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@drawable/edittext_custom_border" />
</RelativeLayout>
