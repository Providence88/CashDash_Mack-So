<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title of the Activity -->
    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Budget"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Display current budget amount -->
    <TextView
        android:id="@+id/itemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Budget: â‚±0.00"
        android:textSize="18sp" />

    <!-- Input for new budget amount -->
    <EditText
        android:id="@+id/editBudgetInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new budget amount"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <!-- Button to save new budget -->
    <Button
        android:id="@+id/btnSaveBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Budget"
        android:layout_marginTop="16dp"
        android:background="?attr/colorPrimary"
        android:textColor="@android:color/white" />

    <!-- Display due date or notification (optional) -->
    <TextView
        android:id="@+id/itemDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due: MM/DD/YYYY"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />
</LinearLayout>
